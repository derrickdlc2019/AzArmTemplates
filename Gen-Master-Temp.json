//This template will contain basic informations needed to run resources on Azure [Resource Group, Vnet, Subnet, IPAddress, Network Interface]
//FUCK YOU

{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {

        "RgVNet": {
            "defaultValue": "Vnet",
            "type": "string",
            "metadata": {
                "decription": "Vnet for Resource Group"
            }
        },
        "VnetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.0.0.0/24",
            "metadata": {
                "decription": "Vnet Address Prefix"
            }
        },

        "RgSubNet": {
            "type": "string",
            "defaultValue": "SubVnet",
            "metadata": {
                "description": "Resource Group SubNet"
            }
        },

        "RgSubNetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.0.1.0/16",
            "metadata": {
                "description": "Subnet Address Prefix"
            }
        },

        "RgNatGateway": {
            "type": "string",
            "defaultValue": "NatGateWay",
            "metadata": {
                "description": "Nat Gateway for public network access"
            }
        },

        "PubIpDNS": {
            "type": "string",
            "defaultValue": "[concat('gw', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "ResourceGroup Ip Address."
            }
        },

        "location" : {
            "defaultValue": "EastUS",
            "type": "string",
            "metadata": {
                "decription": "Location Of The Resource Group"
            }
        }
    },
    "functions": [],
    "variables": {
        "publicIPName": "[concat(parameters('RgNatGateway'), 'ip')]",
        "publicIPAddress": [
            {
                "id": "[resourceId('Microsoft.Network/publicIPAddress', variables('publicIPName'))]"
            }
        ]
    },

    "resources": [
        {

            "type": "Microsoft.Network/publicIPAddress",
            "apiVersion": "2020-05-01",
            "name": "[variables('publicIPAddress')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard"
            },

            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocation": "Dynamic",
                "idleTimeOutInMinutes": 4,
                "dnsSetting": {
                    "domainNameLabel": "[parameters('PubIpDNS')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/natGateways",
            "apiVersion": "2019-11-01",
            "name": "[parameters('RgNatGateway')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddress', variables('publicIPName'))]"
            ],
            "sku": {
                "name": "Standard"
            },

             "properties": {
                 "idleTimeoutInMinutes": 4,
                 "publicIpAddresses": "[if(not(empty(parameters('PubIpDNS'))), variables('publicIPAddress'), json('null'))]"
            }
        },
            {
                "type" : "Microsoft.Network/virtualNetwork",
                "apiVersion": "2019-11-01",
                "name": "[parameters('location')]",
                "dependsOn": [
                    "[resourceId('Microsoft.Network/natGateways', parameters('RgNatGateway'))]"
                ],
                "properties": {
                    "addressSpace": {
                        "addressPrefix": [
                            "[parameters('VnetAddressPrefix')]"
                        ]
                    },
                    "subnet": [
                        {
                            "name": "[parameters('RgSubNet')]",
                            "properties": {
                                "addressPrefix": "[parameters('RgSubNetAddressPrefix')]",
                                "NatGateway": {
                                    "id": "[resourceId('Microsoft.Network/natGateways', parameters('RgNatGateway'))]"
                                },
                                "privateEndpointNetworkPolicies": "Enable",
                                "privateLinkServiceNetworkPolicies": "Enable"
                            }
                        }
                    ],
                    "enableDdosProtection": false,
                    "enableVMProtection": false
                }
            },
            {
                "type": "Microsoft.Network/virtualNetworks/subnets",
                "apiVersion": "2019-11-01",
                "name": "[concat(parameters('RgVNet'), '/SubVnet')]",
                "dependsOn": [
                    "[resourceId('Microsoft.Network/virtualNetwork', parameters('RgVNet'))]",
                    "[resourceId('Microsoft.Network/natGateways', parameters('RgNatGateway'))]"
                ],
                "properties": {
                    "addressPrefix": "[parameters('VnetAddressPrefix')]",
                    "natGateway": {
                        "id": "[resourceId('Microsoft.Network/natGateways', parameters('RgNatGateway'))]"
                    },
                    "privateEndpointNetworkPolicies": "Enabled",
                    "privateLinkServiceNetworkPolicies": "Enables"
                }
            }
    ],
    "outputs": {}
}
